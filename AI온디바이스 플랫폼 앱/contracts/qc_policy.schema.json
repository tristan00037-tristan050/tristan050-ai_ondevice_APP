{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QuickCheckPolicy",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "policy_version",
    "created_at",
    "rules"
  ],
  "properties": {
    "policy_version": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "path",
          "op",
          "severity"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "path": {
            "type": "string",
            "description": "Dot path within QC JSON (e.g., 'status.jwks' or 'raw.lighthouse.staleness_hours')"
          },
          "op": {
            "type": "string",
            "enum": [
              "eq",
              "neq",
              "gt",
              "gte",
              "lt",
              "lte",
              "in",
              "notin",
              "exists"
            ]
          },
          "value": {},
          "severity": {
            "type": "string",
            "enum": [
              "info",
              "warn",
              "block"
            ]
          },
          "note": {
            "type": "string"
          }
        }
      }
    }
  }
}