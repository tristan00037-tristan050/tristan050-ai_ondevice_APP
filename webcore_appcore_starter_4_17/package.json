{
  "name": "app-core-monorepo-r5c",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/service-core-accounting",
    "packages/bff-accounting",
    "packages/app-expo",
    "packages/data-pg",
    "packages/ops-console"
  ],
  "scripts": {
    "build": "tsc -b",
    "build:packages": "npm run -w @appcore/data-pg build && npm run -w @appcore/service-core-accounting build && npm run -w @appcore/bff-accounting build && npm run -w @appcore/app-expo build",
    "typecheck:app": "npm run -w @appcore/app-expo typecheck",
    "ci": "npm run ci --workspaces --if-present",
    "ci:lint": "npm run lint --workspaces --if-present",
    "ci:type-check": "npm run type-check --workspaces --if-present",
    "ci:validate": "node scripts/validate_all.js",
    "ci:validate:accounting": "node scripts/validate_accounting.js",
    "ci:redaction": "node scripts/redactionCoverage.js",
    "ci:gen-types": "./scripts/generate-types.sh",
    "ci:gen-types:accounting": "bash scripts/generate-accounting-types.sh",
    "ci:check-openapi": "node scripts/check_openapi_sync.js",
    "ci:check-roles": "node scripts/check_roles_guard.mjs",
    "ci:check-client-filter": "node scripts/check_client_filter.mjs",
    "smoke": "./scripts/smoke.sh",
    "smoke:accounting": "bash scripts/smoke_accounting.sh",
    "test:e2e:accounting:bff": "node tests/accounting_e2e_bff.mjs",
    "test:e2e:accounting:approvals": "node tests/accounting_approvals_e2e.mjs",
    "test:e2e:accounting:exports": "node tests/accounting_exports_e2e.mjs",
    "test:e2e:accounting:exports:neg": "node tests/accounting_exports_negative_e2e.mjs",
    "test:e2e:accounting:recon": "node tests/accounting_recon_e2e.mjs",
    "db:migrate": "npm run -w @appcore/data-pg build && npm run -w @appcore/data-pg migrate",
    "test:e2e:accounting:persistence": "node tests/persistence_db_e2e.mjs",
    "smoke:accounting:all": "npm run smoke:accounting && npm run test:e2e:accounting:bff",
    "measure:accuracy": "node scripts/measure_accuracy.js --gold datasets/gold/ledgers.json --top-n 5",
    "golden:augment:50": "node scripts/augment_golden_set.mjs",
    "gold:swap": "node scripts/swap_synthetic.mjs",
    "ci:gold-size": "node scripts/lint_golden_set.mjs --file datasets/gold/ledgers.json --min 50 --pii fail",
    "ci:gold-synthetic": "node scripts/gold_enforce_ratio.mjs",
    "ci:gate:accuracy": "node scripts/gate_accuracy.mjs",
    "ci:bench:accounting": "node scripts/bench_accounting_ci.mjs",
    "test:e2e:accounting": "node tests/accounting_e2e.mjs",
    "report:pilot": "node scripts/report_pilot_metrics.mjs --from=2025-12-01 --to=2025-12-31",
    "report:adapter-slo": "node scripts/report_adapter_slo.mjs",
    "ops:local:up": "bash scripts/ops_local_up.sh",
    "ops:local:status": "bash scripts/ops_local_status.sh",
    "ops:local:down": "bash scripts/ops_local_down.sh",
    "dev:bff": "npm run dev --workspace=@appcore/bff-accounting",
    "dev:web": "npm run dev --workspace=@appcore/ops-console",
    "dev:app": "cd packages/app-expo && npx expo start --web",
    "demo:web": "npm run dev --workspace=@appcore/ops-console",
    "demo:app:mock": "cd packages/app-expo && EXPO_PUBLIC_DEMO_MODE=mock npx expo start --web",
    "demo:app:live": "cd packages/app-expo && EXPO_PUBLIC_DEMO_MODE=live npx expo start --web",
    "demo:seed": "node scripts/seed_demo_data.mjs"
  },
  "devDependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^2.1.1",
    "openapi-typescript": "^7.0.0"
  }
}

