{
  "name": "app-core-monorepo-r5c",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "ci": "npm run ci --workspaces --if-present",
    "ci:lint": "npm run lint --workspaces --if-present",
