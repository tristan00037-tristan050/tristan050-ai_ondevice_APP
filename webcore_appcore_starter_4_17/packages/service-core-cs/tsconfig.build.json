{
  "compilerOptions": {
    "composite": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "paths": {
      "@appcore/service-core-common": ["../service-core-common/src"]
    }
  },
  "include": ["src/**/*"],
  "references": [
    {
      "path": "../service-core-common"
    }
  ]
}
