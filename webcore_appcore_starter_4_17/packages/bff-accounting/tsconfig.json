{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "composite": true,
    "types": ["node"]
  },
  "references": [
    { "path": "../service-core-accounting" }
  ],
  "include": ["src/**/*", "types/**/*"],
  "exclude": ["src/**/*.test.ts"]
}
