{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "image": {
      "type": "object",
      "properties": {
        "repository": { "type": "string" },
        "tag": { "type": "string" },
        "pullPolicy": { "type": "string" }
      },
      "required": ["repository", "tag"]
    },
    "service": {
      "type": "object",
      "properties": {
        "type": { "type": "string" },
        "port": { "type": "integer" }
      },
      "required": ["port"]
    },
    "ingress": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "className": { "type": "string" },
        "host": { "type": "string" },
        "tls": {
          "type": "object",
          "properties": {
            "enabled": { "type": "boolean" },
            "secretName": { "type": "string" }
          }
        }
      }
    },
    "env": { "type": "object" },
    "secrets": {
      "type": "object",
      "properties": {
        "enabled": { "type": "boolean" },
        "DATABASE_URL": { "type": "string" },
        "EXPORT_SIGN_SECRET": { "type": "string" }
      }
    }
  }
}

