{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "QuickCheckPolicy",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "policy_version",
    "created_at",
    "rules"
  ],
  "properties": {
    "policy_version": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "target",
          "operator",
          "value",
          "severity"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "target": {
            "type": "string",
            "enum": [
              "api",
              "jwks",
              "holidays",
              "observability",
              "ics",
              "lighthouse"
            ]
          },
          "operator": {
            "type": "string",
            "description": "Comparison operator for the target metric/value.",
            "enum": [
              "eq",
              "neq",
              "gt",
              "gte",
              "lt",
              "lte",
              "in",
              "notin",
              "exists",
              "stale_hours_gt"
            ]
          },
          "value": {},
          "severity": {
            "type": "string",
            "enum": [
              "info",
              "warn",
              "block"
            ]
          },
          "notes": {
            "type": "string"
          }
        }
      }
    }
  }
}