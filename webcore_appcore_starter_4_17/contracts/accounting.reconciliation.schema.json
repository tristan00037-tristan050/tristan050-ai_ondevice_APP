{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "accounting.reconciliation.schema.json",
  "title": "ReconciliationSessionCreate",
  "type": "object",
  "properties": {
    "client_request_id": {
      "type": "string"
    },
    "tolerance": {
      "type": "object",
      "properties": {
        "days": {
          "type": "integer",
          "minimum": 0,
          "maximum": 31
        }
      },
      "additionalProperties": false
    },
    "bank": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/bankTxn"
      }
    },
    "ledger": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/definitions/ledgerEntry"
      }
    }
  },
  "required": ["bank", "ledger"],
  "additionalProperties": false,
  "definitions": {
    "money": {
      "type": "string",
      "pattern": "^-?[0-9][0-9,._\\s]*$"
    },
    "iso4217": {
      "type": "string",
      "pattern": "^[A-Z]{3}$"
    },
    "bankTxn": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "date": {
          "type": "string"
        },
        "amount": {
          "$ref": "#/definitions/money"
        },
        "currency": {
          "$ref": "#/definitions/iso4217"
        },
        "desc": {
          "type": "string"
        },
        "description": {
          "type": "string"
        }
      },
      "required": ["id", "date", "amount", "currency"],
      "additionalProperties": false
    },
    "ledgerEntry": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "date": {
          "type": "string"
        },
        "amount": {
          "$ref": "#/definitions/money"
        },
        "currency": {
          "$ref": "#/definitions/iso4217"
        },
        "account": {
          "type": "string"
        },
        "memo": {
          "type": "string"
        }
      },
      "required": ["id", "date", "amount", "currency", "account"],
      "additionalProperties": false
    }
  }
}


