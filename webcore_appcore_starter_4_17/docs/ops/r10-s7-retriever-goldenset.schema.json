{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "r10-s7-retriever-goldenset.schema.json",
  "title": "R10-S7 Retriever Goldenset (JSONL)",
  "type": "object",
  "required": ["schema_version", "id", "locale", "query", "expected"],
  "additionalProperties": false,
  "properties": {
    "schema_version": {
      "type": "string",
      "pattern": "^r10-s7-retriever-goldenset/v1$"
    },
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9][a-z0-9\\-]{3,64}$"
    },
    "locale": {
      "type": "string",
      "enum": ["ko-KR", "en-US"]
    },
    "query": {
      "type": "string",
      "minLength": 2,
      "maxLength": 240
    },
    "expected": {
      "type": "object",
      "required": ["must_have_any", "must_not_have_any"],
      "additionalProperties": false,
      "properties": {
        "must_have_any": {
          "type": "array",
          "minItems": 1,
          "maxItems": 8,
          "items": { "type": "string", "minLength": 1, "maxLength": 80 }
        },
        "must_not_have_any": {
          "type": "array",
          "minItems": 0,
          "maxItems": 8,
          "items": { "type": "string", "minLength": 1, "maxLength": 80 }
        }
      }
    },
    "tags": {
      "type": "array",
      "minItems": 0,
      "maxItems": 8,
      "items": { "type": "string", "minLength": 1, "maxLength": 32 }
    },
    "notes": {
      "type": "string",
      "maxLength": 240
    },
    "created_at": {
      "type": "string",
      "maxLength": 40
    }
  }
}
