{
  "over_redaction_guard_pct": 80,
  "rules": [
    {
      "name": "Bearer/Token",
      "pattern": "(?i)(authorization|token)[\"':=\\s]+([A-Za-z0-9\\-\\._~\\+/]+=*)",
      "flags": "i",
      "replacement": "\\1: [REDACTED]"
    },
    {
      "name": "Internal hostnames",
      "pattern": "https?://[a-z0-9\\-\\.]+\\.(company|corp)\\.(local|internal)(:[0-9]+)?",
      "flags": "i",
      "replacement": "https://internal-gw/\u2026"
    },
    {
      "name": "IPv4 addresses",
      "pattern": "\\b(\\d{1,3}\\.){3}\\d{1,3}\\b",
      "replacement": "[REDACTED_IP]"
    }
  ]
}