{
  "rules": [
    {
      "name": "Authorization header",
      "pattern": "(?i)(authorization|token)[\"':=\\s]+([A-Za-z0-9\\-\\._~\\+/]+=*)",
      "flags": "gi",
      "replacement": "\\1: [REDACTED]"
    },
    {
      "name": "Internal host",
      "pattern": "https?://[a-z0-9\\-\\.]+\\.(company|corp|internal|local)(:[0-9]+)?",
      "flags": "gi",
      "replacement": "https://internal-gw"
    },
    {
      "name": "IPv4",
      "pattern": "\\b(\\d{1,3}\\.){3}\\d{1,3}\\b",
      "flags": "g",
      "replacement": "[IP-REDACTED]"
    }
  ]
}