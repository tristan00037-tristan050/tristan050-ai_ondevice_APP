{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "RedactRules",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "rules"
  ],
  "properties": {
    "rules": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "name",
          "pattern",
          "replacement"
        ],
        "properties": {
          "name": {
            "type": "string"
          },
          "pattern": {
            "type": "string",
            "description": "JavaScript RegExp pattern string (without / /)"
          },
          "flags": {
            "type": "string",
            "description": "JS RegExp flags, e.g. 'gi'"
          },
          "replacement": {
            "type": "string"
          }
        }
      }
    }
  }
}