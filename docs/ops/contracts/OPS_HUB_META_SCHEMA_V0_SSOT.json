{
  "schema_name": "OPS_HUB_META_SCHEMA_V0",
  "description": "Operations Hub v0 meta-only event schema (no raw text allowed)",
  "allowed_keys": [
    "status",
    "reason_code",
    "ts_utc",
    "duration_ms_bucket",
    "request_id",
    "app_version",
    "model_version",
    "policy_version",
    "repo_sha",
    "count_*",
    "device_id_hash",
    "mode",
    "shadow",
    "runtime_ok",
    "runtime_status",
    "runtime_latency_ms_bucket",
    "runtime_manifest_sha256",
    "event_type",
    "event_category",
    "severity",
    "component",
    "operation",
    "outcome",
    "latency_ms",
    "error_code",
    "tenant_id_hash",
    "user_id_hash"
  ],
  "forbidden_patterns": [
    "prompt",
    "raw",
    "text",
    "message",
    "content",
    "body",
    "payload",
    "input",
    "output",
    "request",
    "response",
    "query",
    "patch",
    "diff",
    "commit message",
    "stack trace",
    "BEGIN",
    "END",
    "password",
    "secret",
    "token",
    "key"
  ],
  "max_string_len": 120,
  "max_array_len": 100,
  "max_object_keys": 50,
  "max_depth": 5
}

